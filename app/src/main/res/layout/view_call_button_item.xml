<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/call_activity_call_button_item_width_and_height"
    android:layout_height="@dimen/call_activity_call_button_item_width_and_height"
    android:background="?attr/selectableItemBackground"
    android:gravity="center"
    android:id="@+id/ll_main">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/call_activity_call_button_item_image_size"
        android:layout_height="@dimen/call_activity_call_button_item_image_size" />

    <TextView
        android:layout_marginTop="@dimen/margin_8dp"
        android:gravity="center"
        android:minLines="2"
        android:id="@+id/tv_function"
        android:textColor="@android:color/white"
        android:textSize="@dimen/call_activity_call_button_item_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>